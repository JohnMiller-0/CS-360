<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".FragmentSetting">

    <Button
        android:id="@+id/buttonChange"
        android:layout_width="280dp"
        android:layout_height="50dp"
        android:text="@string/change_password"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.3"
        />

    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/switchSMS"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/sms"
        android:textSize="28sp"
        app:layout_constraintTop_toBottomOf="@id/buttonChange"
        app:layout_constraintEnd_toEndOf="@id/buttonChange"
        android:layout_marginTop="20dp"/>
    <Button
        android:id="@+id/buttonReturn"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:text="@string/home"
        app:layout_constraintStart_toStartOf="@id/switchSMS"
        app:layout_constraintTop_toBottomOf="@id/switchSMS"
        android:layout_marginTop="30dp"/>
    <Button
        android:id="@+id/buttonLogout"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/buttonReturn"
        app:layout_constraintTop_toBottomOf="@id/buttonReturn"
        android:layout_marginTop="30dp"
        android:text="@string/logout"/>

</androidx.constraintlayout.widget.ConstraintLayout>